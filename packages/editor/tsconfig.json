{
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of your TypeScript files
    "declaration": true, // Emit .d.ts declaration files
    "declarationDir": "./dist", // Where to store .d.ts files
    "module": "esnext", // Module system (ESNext, CommonJS, etc.)
    "target": "es6", // Target ECMAScript version
    "jsx": "react-jsx", // Support for JSX/React
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true, // Enable strict type-checking
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"], // Include all TypeScript files in src
  "exclude": ["node_modules", "dist"]
}
